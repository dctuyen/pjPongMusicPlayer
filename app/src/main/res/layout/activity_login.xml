<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#C2DCDC"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-16dp">

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginLeft="120dp"
            android:background="@drawable/border_edit_text"
            android:backgroundTint="#FFFFE4"
            android:contentDescription="@string/ic_brand"
            android:hapticFeedbackEnabled="false"
            app:srcCompat="@drawable/brand_app" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="80dp" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/border_edit_text"
            android:backgroundTint="#00ACC1">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:contentDescription="@string/ic_persion"
                app:srcCompat="@drawable/ic_baseline_person_24" />

            <EditText
                android:id="@+id/edAccountLogin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:autofillHints=""
                android:ems="10"
                android:hint="@string/account"
                android:inputType="textNoSuggestions" />
        </TableRow>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/border_edit_text"
            android:backgroundTint="#00ACC1">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:contentDescription="@string/app_name"
                app:srcCompat="@drawable/ic_baseline_vpn_key_24" />

            <EditText
                android:id="@+id/edPasswordLogin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:autofillHints=""
                android:ems="10"
                android:hint="@string/password"
                android:inputType="textPassword" />
        </TableRow>

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/border_edit_text"
            android:backgroundTint="#D81B60"
            android:text="@string/login"
            android:textAllCaps="true"
            android:textStyle="bold" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp" />

        <Button
            android:id="@+id/btnRegistration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/btn_non_border"
            android:shadowColor="#00E10404"
            android:text="@string/register"
            android:textAllCaps="true"
            android:textColor="#3949AB"
            android:textStyle="bold" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp">

            <Button
                android:id="@+id/button"
                android:layout_width="145dp"
                android:layout_height="wrap_content"
                android:background="@drawable/border_edit_text"
                android:backgroundTint="#2D88FF"
                android:clickable="false"
                android:drawableRight="@drawable/ic_baseline_facebook_24"
                android:text="Facebook   "
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

            <Space
                android:layout_width="10dp"
                android:layout_height="18dp" />

            <Button
                android:id="@+id/button3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_edit_text"
                android:backgroundTint="#EA4335"
                android:clickable="false"
                android:drawableRight="@drawable/ic_baseline_email_24"
                android:text="Google"
                android:textAllCaps="false"
                android:textStyle="bold" />
        </TableRow>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>