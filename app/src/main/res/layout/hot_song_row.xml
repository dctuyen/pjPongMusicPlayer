<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageviewhootsong"
        android:scaleType="fitXY"
        android:layout_margin="3dp"
        android:layout_width="80dp"
        android:layout_height="80dp"/>

    <TextView

        android:id="@+id/textviewhotsongname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="7dp"
        android:layout_toRightOf="@+id/imageviewhootsong"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Tên bài hát"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textviewhotsongsinger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textviewhotsongname"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="7dp"
        android:layout_toRightOf="@+id/imageviewhootsong"
        android:maxLines="1"
        android:text="Ca sĩ"
        android:textColor="#938D8D"
        android:textSize="18sp" />

    <ImageView

        android:layout_marginRight="13dp"
        android:src="@drawable/iconlove"
        android:id="@+id/imageviewlikes"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_width="30dp"
        android:layout_height="30dp"/>

</RelativeLayout>